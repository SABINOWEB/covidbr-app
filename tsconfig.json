{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "css/*": [
        "./src/css/*"
      ],
      "types/*": [
        "./src/types/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types/*",
      "src/types.d.ts"
    ]
  },
  "include": [
    "src"
  ],
}
